{
  // AirBnb coding style with 4 space indentation, undefined rules are commented out
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "rules": {
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      1,
      120,
      2,
      {
        "ignoreComments": true
      }
    ],
    "no-bitwise": 0,
    "no-plusplus": 0,
    "no-continue": 0,
    "no-console": 0,
    "no-restricted-syntax": [
      2,
      "DebuggerStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-underscore-dangle": [
      2,
      {
        "allowAfterThis": true
      }
    ],
    "comma-dangle": [2, "always-multiline"],
    "class-methods-use-this": 0
  }
}